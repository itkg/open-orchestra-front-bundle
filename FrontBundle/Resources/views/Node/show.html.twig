<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{{ node.name }}{% endblock %}</title>
        {% block stylesheets %}
            {{ openOrchestraCss(node.theme) }}
        {% endblock %}
        <script src="{{ asset('/bundles/openorchestradisplay/libs/require.js') }}"></script>
        <script src="{{ asset('/bundles/openorchestradisplay/requireConf.js') }}"></script>
        <meta name="ROBOTS" content="
            {{- node.metaFollow ? 'FOLLOW': 'NOFOLLOW' -}},
            {{- node.metaIndex ? 'INDEX': 'NOINDEX' -}}
        ">
        <meta name="description" content="{{ node.metaDescription(parameters._locale) }} ">
        <meta name="keywords" content="{{ node.metaKeyword(parameters._locale) }} ">

    </head>
    <body>
        {% for area in node.areas %}
            {% include "OpenOrchestraFrontBundle:Node:area.html.twig" with {"area": area, 'nodeId': node.nodeId, 'parameters': parameters } only %}
        {% endfor %}

        {% block javascripts %}
            {{ openOrchestraJs(node.theme) }}
        {% endblock %}
    </body>
</html>
